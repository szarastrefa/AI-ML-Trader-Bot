# AI/ML Trader Bot Configuration
# Copy this file to .env and customize values for your setup

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
FLASK_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=5000
SECRET_KEY=your-very-long-secret-key-change-in-production

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_URL=postgresql://trader_user:trader_pass@db:5432/ai_trader_db
REDIS_URL=redis://redis:6379/0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/trader.log
LOG_JSON=false

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
DEFAULT_RISK_PERCENT=0.02
MAX_PORTFOLIO_RISK=0.10
MAX_DRAWDOWN=0.15
DAILY_LOSS_LIMIT=0.05
MAX_POSITIONS=10
ENABLE_RISK_MANAGEMENT=true
ENABLE_CIRCUIT_BREAKER=true

# =============================================================================
# METATRADER 5 CONFIGURATION
# =============================================================================
# Example for demo account - replace with your credentials
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=MetaQuotes-Demo
# MT5_PATH=/path/to/terminal64.exe  # Optional, leave empty for auto-detection

# Broker-specific servers (uncomment and configure as needed):
