HUOBI_SECRET=

# OKX
OKX_API_KEY=
OKX_SECRET=
OKX_PASSPHRASE=
OKX_SANDBOX=true

# Bybit
BYBIT_API_KEY=
BYBIT_SECRET=
BYBIT_TESTNET=true

# KuCoin
KUCOIN_API_KEY=
KUCOIN_SECRET=
KUCOIN_PASSPHRASE=
KUCOIN_SANDBOX=true

# =============================================================================
# INTERACTIVE BROKERS CONFIGURATION
# =============================================================================
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=DU123456
# Note: Port 7496 for live trading, 7497 for paper trading

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================

# Smart Money Concept Strategy
SMC_LOOKBACK_PERIOD=20
SMC_BOS_CONFIRMATION_CANDLES=2
SMC_ORDER_BLOCK_STRENGTH=3
SMC_FVG_MIN_SIZE=0.0005
SMC_RISK_REWARD_RATIO=2.0
SMC_CONFIDENCE_THRESHOLD=0.7

# ML Strategy
ML_MODEL_UPDATE_INTERVAL=3600
ML_RETRAIN_INTERVAL=86400
ML_FEATURE_HISTORY_DAYS=30
ML_MIN_TRAINING_SAMPLES=1000

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
ENABLE_PERFORMANCE_MONITORING=true
METRICS_RETENTION_DAYS=30
DATA_RETENTION_DAYS=365
BACKUP_INTERVAL_HOURS=6

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Webhook alerts
WEBHOOK_URL=
WEBHOOK_ENABLED=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000

# =============================================================================
# DEVELOPMENT / DEBUG
# =============================================================================
# Enable additional debug features
ENABLE_API_DOCS=true
ENABLE_DEBUG_TOOLBAR=false

# Disable certain features for testing
DISABLE_REAL_TRADING=true
SIMULATION_MODE=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_LOG_ROUNDS=12
API_RATE_LIMIT=1000 per hour
API_TIMEOUT=30

# CORS settings (development only)
CORS_ORIGINS=*

# =============================================================================
# BROKER TIMEOUTS AND LIMITS
# =============================================================================
MT5_TIMEOUT=60000
CCXT_TIMEOUT=30000
IBKR_TIMEOUT=30000
DEFAULT_SLIPPAGE=0.001
DEFAULT_COMMISSION=0.0005

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# WebSocket configuration
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=60
WS_MAX_MESSAGE_SIZE=1048576

# Market data settings
MARKET_DATA_UPDATE_INTERVAL=60
STRATEGY_UPDATE_INTERVAL=300
PORTFOLIO_UPDATE_INTERVAL=30

# Model settings
MODEL_VALIDATION_SPLIT=0.2
COMPRESS_OLD_DATA=true